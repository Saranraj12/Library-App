<form class="form-class" {{action "signUp" true on="submit"}}>
  <fieldset>
    <h3 class="form-head">Sign Up</h3>

    {{input id="firstname" name="firstname" value=firstname placeholder="First name" required=true}}<br><br>
    {{input id="lastname" name="lastname" value=lastname placeholder="Last name" required=true}}<br><br>
    {{input id="phone" name="phone" value=phone placeholder="Phone Number" required=true}}<br><br>
    {{input id="email" name="email" value=email placeholder="Email" pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$" required=true}}<br><br>
    {{!-- <div class="radio"> Role:
      <table style="padding-left: 10px;width:40%;height:2em;border:none;">
        <tr>
          {{input type="radio" value="staff" id="staff" name="user" class="hover-radio" required=true}}
          <label for="staff">Staff</label><br>
        </tr>
        <tr>
          {{input type="radio" value="publisher" id="publisher" name="user" class="hover-radio"}}
          <label for="publisher">Publisher</label><br>
        </tr>
        <tr>
          {{input type="radio" value="reader" id="reader" name="user" class="hover-radio"}}
          <label for="reader">Reader</label>
        </tr>
      </table>
    </div><br><br> --}}
    <div class="radio" style="display:flex;flex-direction:column"> Role:
          <div style="margin-left:60px">{{input type="radio" value="staff" id="staff" name="user" class="hover-radio" required=true}}
          <label for="staff">Staff</label><br></div>
          <div style="margin-left:60px">{{input type="radio" value="publisher" id="publisher" name="user" class="hover-radio"}}
          <label for="publisher">Publisher</label><br></div>
          <div style="margin-left:60px">{{input type="radio" value="reader" id="reader" name="user" class="hover-radio"}}
          <label for="reader">Reader</label></div>
    </div><br><br>
    {{input id="username" name="username" value=username placeholder="Username" required=true}}<br><br>
    {{input type="password" id="password" name="password" value=password pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}"
            title="Must contain at least one  number and one uppercase and lowercase letter, and at least 8 or more characters"
    placeholder="Password" required=true}}<br><br>
    <button type="submit" class="btn btn-signup wid-class">SignUp</button>
    <button {{action 'backToLogin'}} class="btn btn-signup wid-class">Login</button>

  </fieldset>
</form>

