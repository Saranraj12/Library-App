<form class="form-class">
    <fieldset>
        <h3 class="form-head" style="margin-bottom: 40px;">Login Page</h3>
        {{input id="username" name="username"  placeholder="Username"}}<br><br>
        {{input type="password" id="password" name="password" placeholder="Password"}}<br><br>

        <button {{action "login"}} class="btn btn-signup wid-class">Login</button>
        <button {{action 'backToSignup'}} class="btn btn-signup wid-class">SignUp</button>
    </fieldset>
</form>
{{outlet}}